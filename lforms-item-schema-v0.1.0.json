{
  "id": "lforms-item-schema-v0.1.0#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for NLM LForms item format",
  "type": "object",
  "required": [
    "question",
    "questionCode"
  ],
  "properties": {
    "comment": {
      "description": "TODO: Not part of official spec, but found in some files.",
      "type": ["string", "null"]
    },
    "question": {
      "description": "The label for the question, or the title of the section.",
      "type": "string"
    },
    "questionCode": {
      "description": "",
      "type": "string"
    },
    "localQuestionCode": {
      "description": "",
      "type": ["string", "null"]
    },
    "parentQuestionCode": {
      "description": "",
      "type": ["string", "null"]
    },
    "codingInstructions": {
      "description": "",
      "type": ["string", "null"]
    },
    "copyrightNotice": {
      "description": "",
      "type": ["string", "null"]
    },
    "externallyDefined": {
      "description": "",
      "type": ["string", "null"],
      "format": "uri"
    },
    "header": {
      "description": "",
      "type": "boolean"
    },
    "dataType": {
      "$ref": "#/definitions/dataType"
    },
    "editable": {
      "description": "",
      "enum": [
        "0",
        "1",
        "2",
        null
      ]
    },
    "calculationMethod": {
      "description": "",
      "$ref": "#/definitions/calculationMethod"
    },
    "questionCardinality": {
      "description": "",
      "$ref": "#/definitions/cardinality"
    },
    "answerCardinality": {
      "description": "",
      "$ref": "#/definitions/cardinality"
    },
    "answers": {
      "description": "",
      "type": ["array", "null"],
      "items": {
        "$ref": "#/definitions/answer"
      },
      "uniqueItems": true,
      "additionalProperties": false
    },
    "defaultAnswer": {
      "description": "",
      "$ref": "#/definitions/defaultAnswer"
    },
    "items": {
      "description": "",
      "type": ["array", "null"],
      "items": {
        "$ref": "lforms-item-schema"
      }
    },
    "units": {
      "description": "",
      "type": ["array", "null"],
      "items": {
        "$ref": "#/definitions/unit"
      }
    },
    "restrictions": {
      "description": "",
      "type": ["array", "null"],
      "items": {
        "$ref": "#/definitions/restriction"
      }
    },
    "skipLogic": {
      "$ref": "#/definitions/skipLogic"
    },
    "dataControl": {
      "description": "",
      "type": ["array", "null"],
      "items": {
        "$ref": "#/definitions/dataControl"
      }
    },

    "displayControl": {
      "$ref": "#/definitions/itemDisplayControl"
    },

    "value": {
      "description": "TODO: A temporary way of setting default value. This might be removed in future after implementing defaultValue",
      "type": ["string", "object", "boolean", "number", "null"]
    }
  },
  "additionalProperties": false,


  "definitions": {
    "dataType": {
      "description": "TODO: Temporarily allow NM, null to work with current data.",
      "enum": [
      "BL",
      "TM",
      "DT",
      "DTM",
      "REAL",
      "EMAIL",
      "INT",
      "CNE",
      "CWE",
      "PHONE",
      "RTO",
      "ST",
      "URL",
      "YEAR",
      null,
      "NM"
      ]
    },
    "cardinality": {
      "description": "schema for cardinality",
      "type": "object",
      "properties": {
        "min": {
          "$ref": "#/definitions/cardinalityString"
        },
        "max": {
          "$ref": "#/definitions/cardinalityString"
        }
      },
      "additionalProperties": false
    },
    "cardinalityString": {
      "type": "string",
      "pattern": "^[0-9]+|\\*$"
    },
    "answer": {
      "type": "object",
      "required": [
        "code",
        "text"
      ],
      "properties": {
        "code": {"type": "string"},
        "text": {"type": "string"},
        "label": {"type": "string"},
        "score": {"type": "integer"},
        "other": {"type": "string"}
      },
      "additionalProperties": false
    },
    "defaultAnswer": {
      "oneOf": [
        {
          "$ref": "#/definitions/stringDefaultAnswer"
        },
        {
          "$ref": "#/definitions/CNE_CWE_defaultAnswer"
        }
      ]
    },
    "stringDefaultAnswer": {
      "type": "string"
    },
    "CNE_CWE_defaultAnswer": {
      "type": "object",
      "oneOf": [
        {
          "code": {"type": "string"}
        },
        {
          "label": {"type": "string"}
        }
      ],
      "additionalProperties": false
    },
    "calculationMethod": {
      "type": "object",
      "properties": {
        "name": {
          "enum": ["BMI", "TOTALSCORE", "SELFDEF"]
        },
        "value": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "unit": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "normalRange": {
          "oneOf": [
            {"type": "null"},
            {"$ref": "#/definitions/numericalRange"}
          ]
        },
        "default": { "type": "boolean" }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "numericalRange": {
      "type": "object",
      "properties": {
        "minExclusive": {
          "type": "number"
        },
        "minInclusive": {
          "type": "number"
        },
        "maxExclusive": {
          "type": "number"
        },
        "maxInclusive": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "restriction": {
      "type": "object",
      "properties": {
        "name": {
          "enum": [
            "minExclusive",
            "maxExclusive",
            "minInclusive",
            "maxInclusive",
            "totalDigits",
            "fractionDigits",
            "length",
            "minLength",
            "maxLength",
            "enumeration",
            "whiteSpace",
            "pattern"
          ]
        },
        "value": {
          "type": ["number","string"]
        },
        "maxExclusive": {
          "type": "number"
        },
        "maxInclusive": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "skipLogic": {
      "type": "object",
      "properties": {
        "logic": {
          "enum": [
            "ALL",
            "ANY"
          ]
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/skipLogicCondition"
          }
        },
        "action": {
          "enum": ["show", "hide"]
        }
      },
      "additionalProperties": false
    },
    "skipLogicCondition": {
      "type": "object",
      "properties": {
        "source": {"type": "string"},
        "trigger": {
          "type": "object",
          "oneOf": [
            {
              "properties": {"code": {"type": ["string", "number", "boolean"]}},
              "additionalProperties": false
            },
            {
              "properties": {"label": {"type": "string"}},
              "additionalProperties": false
            },
            {
              "properties": {"value": {"$ref": "#/definitions/triggerValue"}},
              "additionalProperties": false
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "triggerValue": {
      "oneOf": [
        {"type": ["number", "string"]},
        {"$ref": "#/definitions/numericalRange"}
      ]
    },
    "dataControl": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "sourceType": {"type": ["string", "null"]},
            "sourceDataType": {"type": "string"},
            "itemCode": {"type": "string"},
            "data": {"type": "string"}
          },
          "additionalProperties": false,
          "required": ["sourceDataType", "itemCode", "data"]
        },
        "onAttribute": {"type": ["string", "null"]}
      },
      "additionalProperties": false,
      "required": ["source"]
    },
    "itemDisplayControl": {
      "type": "object",
      "properties": {
        "css": {
          "$ref": "#/definitions/css"
        },
        "colCSS": {
          "$ref": "#/definitions/css"
        },
        "questionLayout": {"$ref": "#/definitions/questionLayout"},
        "answerLayout": {"$ref": "#/definitions/answerLayout"}
      },
      "additionalProperties": false
    },
    "questionLayout": {
      "enum": ["vertical", "horizontal", "matrix"]
    },
    "answerLayout": {
      "enum": ["combo", "list"]
    },
    "css": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {}
      }
    }
  }
}

